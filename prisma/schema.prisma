datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  books    Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  genre       String
  condition   String
  availability Boolean @default(true)
  ownerId     Int
  owner       User     @relation(fields: [ownerId], references: [id])
}
